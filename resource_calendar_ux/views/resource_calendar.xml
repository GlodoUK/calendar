<odoo>
    <record model="ir.ui.view" id="resource_calendar_form">
        <field name="name">resource_calendar_form</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form" />
        <field name="priority">75</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='global_leave_ids']" position="after">
                <button
                    name="%(action_copy_global_leaves)d"
                    string="Copy to Other Calendars"
                    type="action"
                    class="oe_highlight"
                    context="{'default_src_calendar_id': active_id}"
                />
            </xpath>
        </field>
    </record>
</odoo>
