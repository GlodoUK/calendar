<odoo>
    <record id="view_copy_global_leaves_form" model="ir.ui.view">
        <field name="name">view_copy_global_leaves_form</field>
        <field name="model">resource_calendar_ux.copy_global_leaves</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="src_calendar_id" />
                    <field
                        name="dest_calendar_ids"
                        domain="[('id', '!=', src_calendar_id)]"
                        widget="many2many_tags"
                    />
                </group>
                <footer>
                    <button
                        name="action_copy"
                        string="Copy"
                        type="object"
                        class="btn-primary"
                    />
                    <button special="cancel" string="Cancel" class="btn-default" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_copy_global_leaves" model="ir.actions.act_window">
        <field name="name">Copy Global Leaves</field>
        <field name="res_model">resource_calendar_ux.copy_global_leaves</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field
            name="context"
        >{'default_src_calendar_id': context.get('default_src_calendar_id')}</field>
    </record>
</odoo>
